<body>
  <h1>Edit Skill</h1>
  <form action="/skills/<%= skill._id %>?_method=put" method="post" autocomplete="off">
    <input type="text" name="name" value="<%= skill.name %>">
    <input type="checkbox" <%=skill.learning ? 'checked' : '' %> name="learning">
    <button type="submit">Update</button>
  </form>
</body>

</html>